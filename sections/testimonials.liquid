<script>
    document.addEventListener('DOMContentLoaded', function () {
        const testimonials = document.querySelectorAll('.testimonial');
        const screenHeight = window.innerHeight;

        function fadeInTestimonials() {
            testimonials.forEach(function (testimonial) {
                const testimonialPosition = testimonial.getBoundingClientRect().top;
                if (testimonialPosition < screenHeight) {
                    testimonial.classList.add('in-view');
                }
            });
        }

        window.addEventListener('scroll', function () {
            fadeInTestimonials();
        });

        fadeInTestimonials(); // Mostrar testimonios que ya están en la vista al cargar la página
    });
</script>
